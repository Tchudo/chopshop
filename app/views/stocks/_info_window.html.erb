<div class="container p-0">
  <div class="text-center">
    <div class="img-size">
      <i><%= cl_image_tag product.photo.key%></i>
    </div>
    <div>
      <h6 class="mb-0 mt-1"><%= product.name %></h6>
      <p><%= shop.name %></p>
      <p><%= shop.address %></p>
    </div>
    <div class="d-flex justify-content-between align-item-center px-4">
      <h4><%="#{stock.price}â‚¬" %></h4>
    </div>
    <div class="d-flex justify-content-around align-items-center p-2">

      <% if @basket_user.include? stock.id  %>
        <%= simple_form_for [stock, basket] do |f| %>
          <%= button_tag :submit, class: 'btn border shadow-none' do %>
          <i class="fas fa-shopping-basket shadow-none" style="color: #cfcfcf; cursor: auto; font-size: 20px;"></i>
          <% end %>
        <% end %>
      <% else %>
        <%= simple_form_for [stock, basket] do |f| %>
          <%= button_tag :submit, class: 'btn btn-outline-success shadow-none' do %>
          <i class="fas fa-shopping-basket shadow-none " style="color: #A8D384; font-size: 20px;"></i>
          <% end %>
        <% end %>
      <% end %>

      <%= link_to stock_path(stock.id) do %>
        <button class="btn btn-warning px-2 py-1">
          <i class="fas fa-chevron-right" style="color: white;"></i><i class="fas fa-chevron-right" style="color: white;"></i>
        </button>
      <% end %>

    </div>
  </div>
</div>


