<script>

  const div = document.getElementById('geocoder');
  const displayS = (d) => {
    if (d.style.display === "none") {
      d.style.display = "block";
    } else {
      d.style.display = "none";
    }};
  const search = document.getElementById('btn-add');
  search.addEventListener('click', (event) => {
    displayS(div);
  });


</script>
